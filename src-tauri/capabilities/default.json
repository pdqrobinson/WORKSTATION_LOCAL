{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for AI Workstation",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:read-files",
    "fs:read-dirs",
    "pty:default",
    "pty:allow-spawn",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA/ai-workstation/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$APPDATA/ai-workstation/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "$APPDATA/ai-workstation/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/ai-workstation/**"
        }
      ]
    }
  ]
}
